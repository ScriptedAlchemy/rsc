{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["DOM", "ES2020"],
		"module": "ESNext",
		"jsx": "react-jsx",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"allowImportingTsExtensions": true,
		"declaration": true,
		"declarationMap": true,
		"paths": {
			"framework/*": ["../framework/src/*"]
		}
	},
	"references": [{ "path": "../framework" }],
	"include": ["src"]
}
